.layout-column
	display block

[class*='col-']
	float left
	
	outline 1px dashed brown
	
.col-1-3
	width 33.3333%
	
	&:nth-child(3n)
		margin-right 0

.col-1-4
	width 25%
		
.col-1-4_products
		
	width 23.8095%
	
	margin-right 1.5873%
	
	&:nth-child(4n)
		margin-right 0
	
.col-1-2
	width 50%
	
.col-1-6
	width 16.6666%
	
.col-3-5
	width 60%
	
.col-2-5
	width 40%
	
@media all and (max-width: 1130px)
	.col-1-6_brands
		width 33.3333%
		
		
	.col-1-4_products
		width 32.25%
		
		&:nth-child(4n)
			margin-right 1.5873%
			
		&:nth-child(3n)
			margin-right 0

