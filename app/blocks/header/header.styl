.currency-selector
	position relative
	float right
	min-width 5.68em
	
	margin-top .75em
	margin-left 2.68em // 43px
	
	&::after
		position absolute
		top 1em
		right .625em
		width 8px
		height 4px
		content ''
		background url('../images/down.png') no-repeat
		
		z-index 101
	
	&__selector
		display none
		
	&__list
		position absolute
		top 0
		bottom 0
		width 100%
		height 100%
		
		z-index 100
		
	&__value
		display none
		
		padding-left 1.16em
		
		padding-right 2.5em
		
		padding-y(.83em)
		font-size .75em
		font-weight 600
		line-height 1.25
		color #fff
		
		text-align left
		text-transform uppercase
		background-color #000
		transition(all .3s ease 0s)
		
		&:hover
			background-color #363636
		
		&_display_block
			display block
		


