.footer
	display block
	min-width $base_container_min-width
	
	padding-bottom 40px
	color #6a6a6a
	background-color #000
	
	&__block_top
		position relative
		padding-top 3.68em // 60px
		padding-bottom 3.44em // 55px
		background-color #141414
					
	&__block_bottom
		padding-top 1.56em // 25px
		padding-bottom 4.87em // 78px
		color #363636
		background-color #141414
		
	&__social
		margin-top 2.56em // 41px
		margin-bottom 2.25em // 36px
		padding-left 3px
	
	&__social-item
			width 3.125em
			height 3.125em
			
			margin-right 1em

.horizontal-line
	position relative
	margin-bottom 1.62em // 26px
	border none
	border-bottom 1px solid #363636
	
	&::after
		position absolute
		top 100%
		left 50%
		width 24px
		height 10px
		
		margin-left -12px
		content ''
		background url('../images/footer-triangle.png') no-repeat

.menu-group
	display inline-block
	
	margin-right 8.062% // 104px // 8.2562% - 107px
	vertical-align top
	
	padding-x(8px)	
	
	&__title
		margin-bottom 2.375em // 38px
		font-weight 700
		line-height 1.875 // 30px
		color #fff
		text-transform uppercase
		
		&_italic
			padding-x(.14em)
			font-weight 400
			font-style italic
			text-transform none
		
	&__item
		font-size .875em
		line-height 2.1429
		color #6a6a6a
		
		&:hover
			color #fff
		
		@media all and (max-width: 1220px)
			font-size 1em
		
	&_information
		margin-right 7.7932% // 101px
		
	&_service
		margin-right 9.302% // 120px
		
		@media all and (max-width: 1230px)
			margin-right 8.5365% // 105px
		
	&_connected
		margin-right 0
		

@media all and (max-width: 1130px)
	.footer__col.menu-group
		margin-right 6.8269%
		
		&:last-child
			margin-right 0

		
.form
	margin-top 48px
	margin-left 3px
	padding 4px
	border 1px solid #363636
	
	&__input
		width 20.66em // 248px
		
		padding-x(1.5em)
		font-size .75em
		line-height 2.5
		color #363636
		background-color #141414
		border none

	&__button
		padding .75em 1.42em
		font-size .75em
		color #fff
		background-color #363636
		
		&:hover
			opacity .8

.copyright
	font-size 11px
	line-height 1.6364
	color #6a6a6a
	
.payments
	margin-top 1.25em // 20px
	padding-left 5px
	
	&__item
		display inline-block
		
		margin-right 1.56em // 25px
		line-height 1.69em // 27px
		
		&:nth-child(n + 2)
			margin-right 1.125em // 18px
	
	&__icon
		vertical-align middle
	
.arrow-up
	float right
	width 40px
	height 40px
	
	margin-top -2.18em // -35px
	margin-right 3px
	background-color #000
	border-radius 4px
	transition(all .3s ease 0s)
	
	&:hover
		background-color #363636
	
	&__link
		display inline-block
		width 100%
		height 100%
		
	&__icon
		display inline-block
		width 17px
		height 11px
		
		margin 14px 11px
		background url('../images/arrow-up.png') no-repeat

		