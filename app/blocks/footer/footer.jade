include ../container/container
include ../social/social

mixin footer()
	+b('footer').footer&attributes(attributes)

		- var shops = [{aLink: {href: 'javascript:void(0)'}, value: 'New In'}, {aLink: {href: 'javascript:void(0)'}, value: 'Women'}, {aLink: {href: 'javascript:void(0)'}, value: 'Men'}, {aLink: {href: 'javascript:void(0)'}, value: 'Shoes'}, {aLink: {href: 'javascript:void(0)'}, value: 'Bags & Accessories'}, {aLink: {href: 'javascript:void(0)'}, value: 'Top Brands'}, {aLink: {href: 'javascript:void(0)'}, value: 'Sale & Special Offers'}, {aLink: {href: 'javascript:void(0)'}, value: 'Lookbook'}];

		- var information = [{aLink: {href: 'javascript:void(0)'}, value: 'About Us'}, {aLink: {href: 'javascript:void(0)'}, value: 'Customer Service'}, {aLink: {href: 'javascript:void(0)'}, value: 'New Collection'}, {aLink: {href: 'javascript:void(0)'}, value: 'Best Sellers'}, {aLink: {href: 'javascript:void(0)'}, value: 'Manufacturers'}, {aLink: {href: 'javascript:void(0)'}, value: 'Privacy policy'}, {aLink: {href: 'javascript:void(0)'}, value: 'Terms & Condition'}, {aLink: {href: 'javascript:void(0)'}, value: 'Blog'}];

		- var customerService = [{aLink: {href: 'javascript:void(0)'}, value: 'Search Terms'}, {aLink: {href: 'javascript:void(0)'}, value: 'Advanced Search'}, {aLink: {href: 'javascript:void(0)'}, value: 'Orders and Returns'}, {aLink: {href: 'javascript:void(0)'}, value: 'Contact Us'}, {aLink: {href: 'javascript:void(0)'}, value: 'RSS'}, {aLink: {href: 'javascript:void(0)'}, value: 'Help & FAQs'}, {aLink: {href: 'javascript:void(0)'}, value: 'Consultant'}, {aLink: {href: 'javascript:void(0)'}, value: 'Store Locations'}];

		- var social = [{link: {href: '#', target: '_blank'}, img: {src: './assets/images/social-footer-fb.png', alt: 'fb'}}, {link: {href: '#', target: '_blank'}, img: {src: './assets/images/social-footer-twitter.png', alt: 'twitter'}}, {link: {href: '#', target: '_blank'}, img: {src: './assets/images/social-footer-instagram.png', alt: 'instagram'}}, {link: {href: '#', target: '_blank'}, img: {src: './assets/images/social-footer-pinterest.png', alt: 'pinterest'}}, {link: {href: '#', target: '_blank'}, img: {src: './assets/images/social-footer-feed.png', alt: 'feed'}}];
		
		.footer__block_top
			+container(class='footer__container_block-top')
					.footer__col.menu-group.menu-group_shops
						h2.menu-group__title= 'Shops'
						+list(shops, 'menu-group__')

					.footer__col.menu-group.menu-group_information
						h2.menu-group__title= 'Information'
						+list(information, 'menu-group__')

					.footer__col.menu-group.menu-group_service
						h2.menu-group__title= 'Customer Service'
						+list(customerService, 'menu-group__')

					.footer__col.menu-group.menu-group_connected
						h2.menu-group__title= 'Stay connected'
						+social(social, 'footer__')(class='footer__social')

						h2.menu-group__title!= 'Subscribe <i class="menu-group__title_italic"> to </i> our newsletter'
						form.form(method='post' action='')
							input.form__input(type='email' name='email' placeholder='Enter Your Email Address')
							button.button.form__button(type='submit')= 'Subscribe'

		.footer__block_bottom

			- var payments =[{src: './assets/images/payment-visa.png', alt: 'Visa'}, {src: './assets/images/payment-mastercard.png', alt: 'MasterCard'}, {src: './assets/images/payment-american.png', alt: 'American Express'}, {src: './assets/images/payment-discover.png', alt: 'Discover'}];

			+container
				hr.horizontal-line
				p.copyright!= '&copy; 2015  Shopia  Fashion Store Shopify. <br>All Rights Reserved. Ecommerce Software by Shopify. <br>Designed by MoccaLabs.com'

				.arrow-up
					a.arrow-up__link(href='#')
						span.arrow-up__icon

				ul.payments
					for payment in payments
						li.payments__item
							img(class='payments__icon' src=payment.src alt=payment.alt)
